<html>

<%- include('header', {logedin: logedin, title: "Change About Me" }) -%>


  <form action="/changeaboutme/" method="post">
    <div class="form-group" padding-top: 100px;>
      <label>New Header</label>
      <input type="text" class="form-control" name="newHeader" placeholder="New Header" required>
    </div>
    <div class="form-group">
      <label>New About Me</label>
      <textarea type="text" class="form-control" name="newAboutMe" placeholder="New About Me" maxlength="500"
        rows="3"></textarea>
    </div>

    <button type="submit" value="Change Bio">Edit Bio</button>
  </form>

</html>